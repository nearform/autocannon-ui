{
  "name": "autocannon-ui",
  "version": "2.0.0",
  "description": "A Web user interface for autocannon",
  "repository": "nearform/autocannon-ui",
  "type": "module",
  "author": {
    "name": "Sameer Srivastava",
    "email": "sameer.srivastava@nearform.com"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "cd packages/autocannon-ui-frontend && npm run build",
    "lint": "lerna run lint --stream",
    "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD --exclude-dependents",
    "start": "lerna run dev --parallel",
    "test:qa": "lerna run test:qa --stream",
    "test": "lerna run test --stream",
    "toc": "markdown-toc README.md -i"
  },
  "bin": {
    "autocannon-ui": "./cli.js"
  },
  "dependencies": {
    "@fastify/static": "^6.5.0",
    "autocannon-ui-backend": "^2.0.0",
    "autocannon-ui-frontend": "^2.0.0",
    "fastify": "^4.0.2",
    "fastify-plugin": "^4.0.0",
    "pino": "^8.0.0",
    "pino-pretty": "^9.0.0",
    "pkg-dir": "^7.0.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "husky": "^8.0.1",
    "lerna": "^6.0.0",
    "markdown-toc": "^1.2.0"
  }
}
