{
  "name": "autocannon-ui",
  "version": "1.0.0",
  "private": true,
  "description": "A Web user interface for autocannon",
  "repository": "nearform/autocannon-ui",
  "author": {
    "name": "Sameer Srivastava",
    "email": "sameer.srivastava@nearform.com"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "lerna run dev --parallel",
    "lint": "lerna run lint --stream",
    "desktop": "lerna run desktop --stream",
    "test": "lerna run test --stream",
    "test:qa": "lerna run test:qa --stream",
    "version:safe": "lerna version --no-git-tag-version --no-push",
    "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD --exclude-dependents",
    "toc": "markdown-toc README.md -i",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "husky": "^8.0.1",
    "lerna": "^5.0.0",
    "markdown-toc": "^1.2.0"
  }
}
